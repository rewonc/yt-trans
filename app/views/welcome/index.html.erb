  <input type="text" ng-model="yturl"></input>
  {{yturl}}
  <hr />
  <h3>Load different videos (rails api -> JS)</h3>
  <ul>
    <li ng-repeat="video in videos">
      <h3><button ng-click="loadVideo(video.name)">{{video.name}}</button></h3>
    </li>
  </ul>
  <ul>
    <li><%= link_to 'Add a video', new_video_path %></li> 
  </ul>
  
</div>


